@using DotNetIdentity.Models.CesiZenModels.Respiration
@model IEnumerable<ExerciceConfigurations>
@{
    ViewData["Title"] = "Exercices de respiration";
}

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Choisissez un exercice</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        @foreach (var config in Model)
        {
            <div class="bg-white shadow rounded-lg p-4 flex flex-col">
                <h2 class="text-xl font-semibold">@config.Exercice.Name - @config.Label</h2>
                <p class="text-gray-600 mb-2">@config.Exercice.Description</p>
                <ul class="mb-4">
                    <li>Inspiration : <strong>@config.InhaleDuration</strong> sec</li>
                    <li>Apnée : <strong>@config.HoldDuration</strong> sec</li>
                    <li>Expiration : <strong>@config.HoldDuration</strong> sec</li>
                </ul>
                <form asp-action="StartSession" method="post">
                    <input type="hidden" name="configurationId" value="@config.Id" />
                    <label class="block mb-2">
                        Cycles :
                        <input type="number" name="cycles" value="6" min="1" class="border rounded p-1 w-full" />
                    </label>
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">
                        Lancer
                    </button>
                </form>
            </div>
        }
    </div>
</div>
