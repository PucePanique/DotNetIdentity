@model DotNetIdentity.Models.CesiZenModels.DiagnosticViewModel
@{
    ViewData["Title"] = "Questionnaire de stress";
}

<div class="p-4 max-w-xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">Questionnaire de stress</h1>
    <form asp-action="Index" method="post" class="space-y-3">
        @foreach (var e in Model.Evenements)
        {
            <label class="flex items-center space-x-2 border p-2 rounded">
                <input type="checkbox" name="EvenementsSelectionnes" value="@e.Id" class="form-checkbox h-5 w-5" />
                <span>@e.Nom (@e.Points points)</span>
            </label>
        }

        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded">Valider</button>
    </form>
</div>
