@using DotNetIdentity.Models.CesiZenModels.ViewModels
@model RessourcesVM
@{
    ViewData["Title"] = "Création d'une ressource";
    Layout = "_MainLayout";
}

<div class="row">
	<div class="col-md-12">
		<form asp-controller="Ressources" asp-action="CreerRessource" enctype="multipart/form-data" class="form-creer-client d-flex flex-wrap justify-content-start align-items-stretch" style="display:flex;">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group m-2">
				<required-label asp-for="Title" />
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group m-2">
				<required-label asp-for="Description" />
				<input type="text" asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group m-2">
				<required-label asp-for="Url" />
				<input asp-for="Url" class="form-control" />
				<span asp-validation-for="Url" class="text-danger"></span>
			</div>

			<div class="form-group m-2">
				<required-label asp-for="Category" />
				<input asp-for="Category" class="form-control" />
				<span asp-validation-for="Category" class="text-danger"></span>
			</div>

			<div class="form-group m-2">
				<required-label asp-for="ImagePath" />
				<input type="file" name="pic" class="form-control" />
				<span asp-validation-for="ImagePath" class="text-danger"></span>
			</div>

			<div class="form-group m-3">
				<input type="submit" value="Enregistrer" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

